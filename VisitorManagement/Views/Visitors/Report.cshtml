<script>
    function printDiv(divName)
    {
         var printContents = document.getElementById(divName).innerHTML;
         var originalContents = document.body.innerHTML;

         document.body.innerHTML = printContents;

         window.print();

         document.body.innerHTML = originalContents;
    }
    function optionChange()
    {

         var e = document.getElementById("selected");
         if(e.value == 'btdate')
         {
            update("display:block", "display:none", "display:none");
         }
         else if(e.value == 'date')
         {
             update("display:none", "display:block", "display:none");
         }
         else if(e.value == 'type')
         {
             update("display:none", "display:none", "display:block");
         }
         else if(e.value == 'all'){
             update("display:none", "display:none", "display:none");
         }

    }
    function update(_range, _date, _type){
        document.getElementById("date_range").style = _range;
        document.getElementById("specific_date").style = _date;
        document.getElementById("visits_types").style = _type;
    }

</script>