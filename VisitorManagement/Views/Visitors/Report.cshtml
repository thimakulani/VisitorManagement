@model IEnumerable<VisitorManagement.Service.ReportViewModel>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Filter:</label>
                    <select id='selected' class="form-control" onchange="optionChange()" name="print">
                        <option>--Select Query--</option>
                        <option value="all">All</option>
                        <option value="date">By Specific Date</option>
                        <option value="btdate">By Date Range</option>
                        <option value="type">By Type</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4" id="date_range" style="display:none">
                <div class="form-group">
                    <label>Start Date:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="far fa-calendar-alt"></i>
                            </span>
                        </div>
                        <input type="date" class="form-control float-right" id="reservation">
                    </div>

                </div>
                <div class="form-group">
                    <label>End Date:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="far fa-calendar-alt"></i>
                            </span>
                        </div>
                        <input type="date" class="form-control float-right" id="reservation">
                    </div>

                </div>
            </div>
            <div class="col-md-4" id="specific_date" style="display:none">
                <div class="form-group">
                    <label>Dates:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="far fa-calendar-alt"></i>
                            </span>
                        </div>
                        <input type="date" class="form-control float-right" id="reservation">
                    </div>
                </div>
            </div>

            <div class="col-md-4" style="display:none" id="visits_types">
                <div class="form-group">
                    <label>Visit Type:</label>
                    <select id='type_selected' class="form-control " name="print">
                        <option>--Select Type--</option>
                        <option value="all">Official</option>
                        <option value="intervie">Interview</option>
                        <option value="other">Other</option>
                    </select>
                </div>
            </div>

        </div>
        <div class="col-md-4" id="handle">

            <a class="btn btn-primary">Query</a>
            <a class="btn btn-primary" onclick="printDiv('report')">Print</a>

        </div>
    </div>
    <div class="card-body" id="report">
        <img src="/img/t.png" />
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.VisittorRegister.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Visitor.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Visitor.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VisittorRegister.Last_login)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VisittorRegister.Last_logout)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VisittorRegister.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VisittorRegister.Temperature)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VisittorRegister.AppointmentWith)
                        </th>

                        @* <th></th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.VisittorRegister.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Visitor.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Visitor.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VisittorRegister.Last_login)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VisittorRegister.Last_logout)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VisittorRegister.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VisittorRegister.Temperature)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VisittorRegister.AppointmentWith)
                            </td>
                            @*
                                <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


